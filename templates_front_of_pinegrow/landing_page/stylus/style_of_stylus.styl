:root 
    /* Colores */
    --siraq-gris-fondo #111E27
    --texto-botones #999A9A
    --verde-botones #02AF9C
    --plataforma-de-fondo #202D36
    /* Tama√±os */
    --ancho-nav 850px
    --ancho-wrapper 750px

common_text()
    text-decoration none
    font-size 0.8em
    font-family 'Roboto', sans-serif
    color var(--texto-botones)

width_section(var_width)
    margin-left auto
    margin-right auto
    max-width var_width

html 
    body 
        margin 0
        padding 0
        background var(--siraq-gris-fondo)
        common_text()
        nav 
            display grid
            grid-template-columns 7em 1fr
            align-items center
            justify-content space-between
            width_section(var(--ancho-nav))
            margin-top 2em
            padding-bottom 2em
            a 
                img 
                    width 100%
            div 
                display grid
                grid-template-columns auto auto
                justify-content end
                text-align right
                grid-gap 2em
                a
                    common_text()
        .wrapper 
            width_section(var(--ancho-wrapper))
            section 
                width 100%
                h2 
                    text-align center
                    font-size 1.1em
                    font-weight 700
                    margin 0 0 1.2em
                p
                    text-align center
                    /* margin-bottom 2.8em */
                .tipos_estampados 
                    display grid
                    /* grid-column repeat(4, minmax(10em, 12em)) */
                    /* grid-auto-columns 10em
                    grid-auto-flow column */
                    grid-template-columns repeat(auto-fit, minmax(10em, 12em))
                    row-gap 3.65em
                    column-gap 2.5em
                    /* grid-auto-rows minmax(10em, auto)  */
                    justify-content center
                    /* grid-auto-rows auto */
                    height auto
                    margin-bottom 3.8em
                    
                    div 
                        div 
                            height 10em
                            position relative
                            margin 0 0 2em
                            padding 0
                            display flex
                            justify-content center
                            overflow hidden
                            img 
                                min-height 100%
                                position relative
                                height 100%
            .boton_ver_precio
                display grid
                grid-template-columns repeat(2, 16.6em)
                grid-template-rows 2.5em
                gap 6.2em
                justify-content center
                margin-bottom 3.8em
                a
                    button
                        font-size 0.8em
                        width 100%
                        height 100%
                        background var(--verde-botones)
                        color white
                        border none
                        border-radius 3em
        footer
            background var(--plataforma-de-fondo)
            font-size 16px
            height 19.5em
            .footer_contend
                width_section(var(--ancho-wrapper))
                height 100%
                display grid
                grid-template-rows 12.5em
                grid-template-columns 18em 24em
                gap minmax(3em, 6.5em)
                justify-content space-between
                align-content center
                margin-bottom calc(3.75px*16px)
                line-height 20px
                div
                    font-size 12px
                p
                ul
                    margin 0
                    padding 0
                    list-style none
                    
                    li
        .footer_botton
            height 3.5rem
            min-height 3.5rem
            background var(--siraq-gris-fondo)
