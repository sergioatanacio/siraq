:root 
    --siraq-gris-fondo #111E27
    --texto-botones #999A9A

common_text()
    text-decoration none
    font-size 0.8em
    font-family 'Roboto', sans-serif
    color var(--texto-botones)

html 
    body 
        margin 0
        padding 0
        background var(--siraq-gris-fondo)
        common_text()
        nav 
            display grid
            grid-template-columns 7em 1fr
            align-items center
            justify-content space-between
            margin-left auto
            margin-right auto
            margin-top 2em
            padding-bottom 2em
            max-width 850px
            a 
                img 
                    width 100%
            div 
                display grid
                grid-template-columns auto auto
                justify-content end
                text-align right
                grid-gap 2em
                a
                    common_text()
        .wrapper 
            margin-left auto
            margin-right auto
            max-width 750px
            section 
                width 100%
                h2 
                    text-align center
                    font-size 1.1em
                    font-weight 700
                    margin 0 0 1.2em
                p
                    text-align center
                    /* margin-bottom 2.8em */
                .tipos_estampados 
                    display grid
                    /* grid-column repeat(4, minmax(10em, 12em)) */
                    /* grid-auto-columns 10em
                    grid-auto-flow column */
                    grid-template-columns repeat(auto-fit, minmax(10em, 12em))
                    row-gap 3.65em
                    column-gap 2.5em
                    /* grid-auto-rows minmax(10em, auto)  */
                    justify-content center
                    /* grid-auto-rows auto */
                    height auto
                    margin-bottom 7.7em
                    div 
                        div 
                            height 10em
                            position relative
                            margin 0 0 2em
                            padding 0
                            display flex
                            justify-content center
                            overflow hidden
                            img 
                                min-height 100%
                                position relative
                                height 100%
