/* Este css se debe compilar en la carpeta css de public */
:root 
    /* Colores */
    --siraq-gris-fondo #111E27
    --texto-botones #999A9A
    --verde-botones #02AF9C
    --plataforma-de-fondo #202D36
    --celeste-comun #35A9F2
    --color-agua-sistema aqua
    --color-background-input #2B383E
    --color-font-input #D7D7E1
    --color-white-font white;
    /* Tipografía */
    --font-size-common 'Roboto', sans-serif
    /* Tamaños */
    --ancho-nav 850px
    --ancho-wrapper 750px

@require 'normalize_css'

common_text()
    text-decoration none
    font-size 0.8em
    font-family var(--font-size-common)
    color var(--texto-botones)

width_section(var_width)
    margin-left auto
    margin-right auto
    max-width var_width

.wrapper_admin
    display grid
    grid-template-columns 1fr 6fr
    background-color var(--siraq-gris-fondo)

.color_main_button
    background-color var(--verde-botones)
    color var(--color-white-font)
    border none
    font-family: var(--font-size-common);
    
.common_form_inputs
    background-color: var(--color-background-input);
    font-family: var(--font-size-common);
    color: var(--color-font-input);

@require 'main_page'
@require 'login'
@require 'administrative_panel'

